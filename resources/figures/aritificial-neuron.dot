digraph {
  node [shape=circle]
  edge [arrowhead=none]
  splines=line
  rankdir=LR

  /* Entities */
  x0 [label="1", shape=square]
  x1 [label="x1", shape=plain]
  x2 [label="x2", shape=plain]
  x3 [label="x3", shape=plain]
  x4 [label="x4", shape=plain]

  m2 [label="w.x"]

  y3 [label="f(w.x)", shape=plain]

  /* Relationships */
  x0 -> m2 [label="w0"]
  x1 -> m2 [label="w1"]
  x2 -> m2 [label="w2"]
  x3 -> m2 [label="w3"]
  x4 -> m2 [label="w4"]

  m2 -> y3

  /* Orders */
  {
    rank=same; edge [style=invis]; rankdir=TB
    x0 -> x1 -> x2 -> x3 -> x4
  }
}
